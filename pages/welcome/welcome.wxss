.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

page{
  background-color: #b3d4db;
  height: 80%;
}

.user-avatar{
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

.user-name{
  font-size: 32rpx;
  font-weight: bold;
}

.moto{
  font-size: 22rpx;
  font-weight: bold;
    /* 文字和方框一样高 */
  line-height: 80rpx;
  color: #405f80;
}

.moto-container{
  margin-top: 200rpx;
  /* 小方框 */
  border: 1px solid #405f80;
  height: 80rpx;
  width: 200rpx;
  /* 小圆角 */
  border-radius: 5px;
   /* 水平居中 */
  text-align: center;
  /* margin-bottom: 200rpx; */
}

